{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}